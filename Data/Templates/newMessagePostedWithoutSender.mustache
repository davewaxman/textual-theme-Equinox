{{! The 'line types' folder needs to be copied to a custom style to modify this file. }}
{{#inlineNicknameMatchFound}}
<span class="inline_nickname" ondblclick="Textual.inlineNicknameDoubleClicked()" oncontextmenu="Textual.openInlineNicknameContextualMenu()" mode="{{inlineNicknameUserModeSymbol}}" nickname="{{{messageFragment}}}" colornumber="{{inlineNicknameColorNumber}}">
{{/inlineNicknameMatchFound}}
<div 	ltype="{{lineType}}" 

{{^isRemoteMessage}}
		mtype="{{nicknameType}}"
{{/isRemoteMessage}}

		command="{{rawCommand}}" 
		class="line {{lineClassAttributeRepresentation}}" 
		id="line-{{lineNumber}}" 
		timestamp="{{timestamp}}">
	
	<p>
		<span class="time">{{formattedTimestamp}} </span>
		<span class="message" ltype="{{lineType}}">
			{{{formattedMessage}}}
		</span>
	</p>
</div>
